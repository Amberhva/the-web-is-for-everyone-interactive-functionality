<%- include('./partials/head') %>

<main>
    <!-- Notes Section -->
    <section class="section menu" id="menu">
        <div class="menu-container container">
            <div class="menu-text">
                <h2 class="section-title">Notities van Pepijn</h2>
                <p class="section-description">Hieronder zie je een overzicht van al je gemaakte notities.</p>
            </div>

            <div class="menu-content">
                <div class="menu-items">
                    <% notities.forEach(notitie => { %>
                    <div class="menu-item flex">
                        <img src="/placeholder.png" alt="" class="menu-img" />

                        <div class="menuItem-details">
                            <h4 class="menuItem-topic"><%= notitie.titel %></h4>
                            <p class="menuItem-des"><%= notitie.beschrijving %></p>
                        </div>

                        <div class="menuItem-price flex">
                            <h4 class="menuItem-topic">Datum</h4>
                            <span class="menuItem-des"><%= notitie.datum %></span>
                        </div>

                        <div class="menuItem-price flex">
                            <h4 class="menuItem-topic">Datum van herinnering</h4>
                            <span class="menuItem-des"><%= notitie.herinnering %></span>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('./partials/foot') %>
